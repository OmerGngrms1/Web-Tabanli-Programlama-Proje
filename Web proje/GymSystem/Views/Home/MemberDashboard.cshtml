@model GymSystem.Models.Member

@{
    ViewData["Title"] = "Üye Paneli";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-5 fw-bold text-primary">Hoşgeldin, @Model.Name!</h1>
        <p class="lead text-muted">Aşağıda üyelik durumunu ve size özel programları görüntüleyebilirsiniz.</p>
    </div>
</div>

<div class="row g-4 mb-4">
    <!-- Kalan Gün -->
    <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center p-4">
                <div class="mb-3 text-primary">
                    <i class="bi bi-hourglass-split display-4"></i>
                </div>
                <h5 class="card-title text-muted">Kalan Gün</h5>
                <h2 class="display-4 fw-bold mb-0">@Model.RemainingDays</h2>
                <small class="text-@(Model.RemainingDays <= 7 ? "danger" : "success")">
                    @Model.MembershipStatus
                </small>
            </div>
        </div>
    </div>

    <!-- Üyelik Süresi -->
    <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center p-4">
                <div class="mb-3 text-info">
                    <i class="bi bi-calendar-check display-4"></i>
                </div>
                <h5 class="card-title text-muted">Üyelik Paketi</h5>
                <h2 class="display-4 fw-bold mb-0">@Model.DurationInMonths <span class="fs-4 text-muted">Ay</span></h2>
                <small class="text-muted">Bitiş: @Model.EndDate.ToString("d")</small>
            </div>
        </div>
    </div>

    <!-- Katılım Bilgisi -->
    <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center p-4">
                <div class="mb-3 text-success">
                    <i class="bi bi-check-circle-fill display-4"></i>
                </div>
                <h5 class="card-title text-muted">Toplam Katılım</h5>
                <h2 class="display-4 fw-bold mb-0">@Model.Attendances.Count</h2>
                <small class="text-muted">Son giriş: @(Model.Attendances.OrderByDescending(a => a.Date).FirstOrDefault()?.Date.ToString("d") ?? "-")</small>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold">Son Yoklamalar</h5>
            </div>
            <div class="card-body p-0">
                @if (Model.Attendances.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Tarih</th>
                                    <th>Gün</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var attendance in Model.Attendances.OrderByDescending(a => a.Date).Take(10))
                                {
                                    <tr>
                                        <td>@attendance.Date.ToString("d")</td>
                                        <td>@attendance.Date.ToString("dddd", new System.Globalization.CultureInfo("tr-TR"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-4 text-center text-muted">
                        Henüz yoklama kaydı bulunmamaktadır.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <!-- Antrenman Programı -->
    <div class="col-md-6 mb-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-header bg-dark text-white py-3">
                <h5 class="mb-0 fw-bold"><i class="fas fa-dumbbell me-2"></i>Antrenman Programım</h5>
            </div>
            <div class="card-body">
                @if (Model.WorkoutProgram != null)
                {
                    <h5 class="card-title fw-bold">@Model.WorkoutProgram.Name</h5>
                    <p class="card-text text-muted">@Model.WorkoutProgram.Description</p>
                    <hr />
                    <div class="bg-light p-3 rounded" style="white-space: pre-wrap;">@Model.WorkoutProgram.Details</div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-info-circle display-4 mb-3 d-block opacity-25"></i>
                        Henüz bir antrenman programı atanmamış.
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Diyet Listesi -->
    <div class="col-md-6 mb-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-header bg-success text-white py-3">
                <h5 class="mb-0 fw-bold"><i class="fas fa-carrot me-2"></i>Diyet Listem</h5>
            </div>
            <div class="card-body">
                @if (Model.DietPlan != null)
                {
                    <h5 class="card-title fw-bold">@Model.DietPlan.Name</h5>
                    <hr />
                    <div class="bg-light p-3 rounded" style="white-space: pre-wrap;">@Model.DietPlan.Details</div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                         <i class="fas fa-utensils display-4 mb-3 d-block opacity-25"></i>
                        Henüz bir diyet listesi atanmamış.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
