@using System.Security.Claims
@{
    ViewData["Title"] = "Ana Sayfa";
    bool isMember = User.IsInRole("Member");
    var member = ViewBag.Member as GymSystem.Models.Member;
    var attendanceHistory = ViewBag.AttendanceHistory as List<GymSystem.Models.Attendance>;
    bool isAttendanceMarked = ViewBag.IsAttendanceMarked ?? false;
}

@if (isMember && member != null)
{
    <div class="container-fluid py-4">
        <!-- Welcome Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card bg-primary text-white shadow-lg border-0 overflow-hidden position-relative">
                    <div class="card-body p-5 position-relative" style="z-index: 2;">
                        <h1 class="display-4 fw-bold">Hoş Geldin, @member.Name!</h1>
                        <p class="lead mb-0">Bugün hedeflerine bir adım daha yaklaş.</p>
                    </div>
                     <!-- Abstract Background Overlay -->
                    <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(45deg, rgba(0,0,0,0.1), rgba(0,0,0,0.4)); z-index: 1;"></div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- Left Column: Profile (Side Panel) -->
            <div class="col-lg-4">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white border-0 pt-4 px-4">
                        <h5 class="fw-bold mb-0 text-primary"><i class="fas fa-user-circle me-2"></i>Bilgilerim</h5>
                    </div>
                    <div class="card-body px-4">
                         <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted small">Ad Soyad</span>
                            <span class="fw-bold">@member.Name @member.Surname</span>
                        </div>
                         <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted small">E-Posta</span>
                            <span class="fw-bold fs-7">@member.Email</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted small">Telefon</span>
                            <span class="fw-bold">@member.Phone</span>
                        </div>
                         <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted small">Cinsiyet</span>
                            <span class="fw-bold">@member.Gender</span>
                        </div>
                        <hr class="my-2 opacity-10" />
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted small">Yaş</span>
                            <span class="fw-bold">@(member.Age.HasValue ? member.Age.ToString() : "-")</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted small">Kilo</span>
                            <span class="fw-bold">@(member.Weight?.ToString() ?? "-") <small class="text-muted">kg</small></span>
                        </div>
                         <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted small">Boy</span>
                            <span class="fw-bold">@(member.Height?.ToString() ?? "-") <small class="text-muted">cm</small></span>
                        </div>
                        <hr class="my-2 opacity-10" />
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted small">Kayıt Tarihi</span>
                            <span class="fw-bold">@member.RegistrationDate.ToString("dd.MM.yyyy")</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted small">Üyelik Süresi</span>
                            <span class="fw-bold">@member.DurationInMonths Ay</span>
                        </div>
                         <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted small">Bitiş Tarihi</span>
                            <span class="badge bg-warning text-dark">@member.EndDate.ToString("dd.MM.yyyy")</span>
                        </div>
                        
                         <div class="d-grid mt-4">
                            <a asp-controller="Account" asp-action="EditProfile" class="btn btn-outline-primary btn-sm"><i class="fas fa-edit me-2"></i>Bilgileri Düzenle</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Actions & Stats -->
            <div class="col-lg-8">
                <!-- Status Cards Row -->
                <div class="row g-3 mb-4">
                    <!-- Program Card -->
                    <div class="col-md-4">
                         <div class="card shadow-sm border-0 h-100">
                            <div class="card-body p-3 text-center d-flex flex-column align-items-center justify-content-center">
                                <div class="icon-square bg-primary-light text-primary mb-2 rounded-3 p-2">
                                    <i class="fas fa-dumbbell fa-lg"></i>
                                </div>
                                <h6 class="fw-bold small mb-1">Antrenman</h6>
                                @if (member.WorkoutProgram != null)
                                {
                                    <p class="text-muted small mb-2 text-truncate w-100">@member.WorkoutProgram.Name</p>
                                    <a asp-controller="Programs" asp-action="Details" asp-route-id="@member.WorkoutProgramId" class="btn btn-primary btn-sm w-100 mt-auto">Görüntüle</a>
                                }
                                else
                                {
                                     <p class="text-muted small mb-2">Atanmadı</p>
                                     <button class="btn btn-secondary btn-sm w-100 mt-auto" disabled>Görüntüle</button>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Diet Card -->
                    <div class="col-md-4">
                         <div class="card shadow-sm border-0 h-100">
                            <div class="card-body p-3 text-center d-flex flex-column align-items-center justify-content-center">
                                <div class="icon-square bg-success-light text-success mb-2 rounded-3 p-2">
                                    <i class="fas fa-utensils fa-lg"></i>
                                </div>
                                <h6 class="fw-bold small mb-1">Diyet Listesi</h6>
                                @if (member.DietPlan != null)
                                {
                                    <p class="text-muted small mb-2 text-truncate w-100">@member.DietPlan.Name</p>
                                     <a asp-controller="DietPlans" asp-action="Details" asp-route-id="@member.DietPlanId" class="btn btn-success btn-sm w-100 mt-auto">Görüntüle</a>
                                }
                                 else
                                {
                                     <p class="text-muted small mb-2">Atanmadı</p>
                                     <button class="btn btn-secondary btn-sm w-100 mt-auto" disabled>Görüntüle</button>
                                }
                            </div>
                        </div>
                    </div>

                     <!-- Attendance Card -->
                    <div class="col-md-4">
                         <div class="card shadow-sm border-0 h-100">
                            <div class="card-body p-3 text-center d-flex flex-column align-items-center justify-content-center">
                                <div class="icon-square bg-danger-light text-danger mb-2 rounded-3 p-2">
                                    <i class="fas fa-calendar-check fa-lg"></i>
                                </div>
                                <h6 class="fw-bold small mb-1">Yoklama</h6>
                                
                                @if (!isAttendanceMarked)
                                {
                                    <p class="text-muted small mb-2">Henüz yoklama almadın</p>
                                    <form asp-action="MarkAttendance" method="post" class="w-100 mt-auto">
                                        <button type="submit" class="btn btn-sm btn-danger w-100 pulse-animation">
                                            Buradayım!
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <p class="text-success small mb-2 fw-bold">Katılım Alındı <i class="fas fa-check"></i></p>
                                    <button class="btn btn-sm btn-outline-success w-100 mt-auto" disabled>Kaydedildi</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Weight Chart (Wide & Controlled Height) -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white border-0 pt-3 px-4 d-flex justify-content-between align-items-center">
                        <h6 class="fw-bold mb-0 text-info"><i class="fas fa-chart-line me-2"></i>Kilo Takibi</h6>
                        <small class="text-muted">Son 30 Gün</small>
                    </div>
                    <div class="card-body px-4 pb-4">
                        <div style="height: 300px; width: 100%;">
                            <canvas id="weightChart"></canvas>
                        </div>
                         @if(ViewBag.WeightHistory != null)
                        {
                            var history = (List<GymSystem.Models.MemberWeight>)ViewBag.WeightHistory;
                            if(history.Any())
                            {
                                <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                                <script>
                                    document.addEventListener("DOMContentLoaded", function() {
                                        const ctx = document.getElementById('weightChart').getContext('2d');
                                        const dates = @Json.Serialize(history.Select(x => x.Date.ToString("dd.MM")));
                                        const weights = @Json.Serialize(history.Select(x => x.Weight));

                                        new Chart(ctx, {
                                            type: 'line',
                                            data: {
                                                labels: dates,
                                                datasets: [{
                                                    label: 'Kilo (kg)',
                                                    data: weights,
                                                    borderColor: '#3b82f6',
                                                    backgroundColor: 'rgba(59, 130, 246, 0.1)',
                                                    borderWidth: 2,
                                                    pointRadius: 4,
                                                    pointBackgroundColor: '#fff',
                                                    pointBorderColor: '#3b82f6',
                                                    fill: true,
                                                    tension: 0.4
                                                }]
                                            },
                                            options: {
                                                responsive: true,
                                                maintainAspectRatio: false,
                                                plugins: {
                                                    legend: { display: false }
                                                },
                                                scales: {
                                                    y: { 
                                                        beginAtZero: false,
                                                        grid: { borderDash: [2, 4], color: '#f0f0f0' }
                                                    },
                                                    x: {
                                                        grid: { display: false }
                                                    }
                                                }
                                            }
                                        });
                                    });
                                </script>
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center h-100">
                                    <p class="text-muted small">Henüz veri grafiği oluşmadı.</p>
                                </div>
                            }
                        }
                    </div>
                </div>

                <!-- Motivation Banner -->
                <div class="card shadow-sm border-0 bg-dark text-white overflow-hidden">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 p-3 bg-white text-dark d-none d-md-block" style="opacity: 0.8;">
                             <i class="fas fa-quote-left fa-2x"></i>
                        </div>
                        <div class="card-body p-3">
                             <p class="fst-italic mb-0 text-center text-md-start">"Gelecekteki sen, bugün yaptıkların için sana teşekkür edecek."</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
    
    <style>
    .icon-square {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .bg-primary-light { background-color: rgba(37, 99, 235, 0.1); }
    .bg-success-light { background-color: rgba(16, 185, 129, 0.1); }
    .bg-danger-light { background-color: rgba(220, 53, 69, 0.1); }
    
    .pulse-animation {
        animation: pulse 2s infinite;
    }
    @@keyframes pulse {
        0% { transform: scale(1); box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.7); }
        70% { transform: scale(1.05); box-shadow: 0 0 0 10px rgba(220, 53, 69, 0); }
        100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(220, 53, 69, 0); }
    }
    </style>
}
else
{
    <!-- Admin/Trainer Dashboard -->
<div class="p-5 mb-4 bg-light rounded-3 shadow-sm border" style="background: linear-gradient(120deg, var(--background-light) 0%, #fff 100%);">
    <div class="container-fluid py-4">
        <h1 class="display-5 fw-bold text-gradient">FitTrack'e Hoş Geldiniz</h1>
        <p class="col-md-8 fs-4 text-muted">Spor salonunuzu modern ve kolay bir şekilde yönetin. Üyelerinizi takip edin, programlar oluşturun ve istatistiklerinizi inceleyin.</p>
    </div>
</div>

<!-- Stats Cards -->
<div class="row text-center mb-5 pb-5">
    <div class="col-md-4 mb-4">
        <div class="card h-100 border-0 shadow-sm hover-card">
            <div class="card-body p-4">
                <div class="icon-circle mb-3 bg-primary-light text-primary">
                    <i class="fas fa-users fa-2x"></i>
                </div>
                <h5 class="card-title text-muted text-uppercase fs-6">Toplam Üye</h5>
                <h2 class="display-4 fw-bold text-dark">@ViewBag.MemberCount</h2>
                <a asp-controller="Members" asp-action="Index" class="btn btn-sm btn-link text-decoration-none stretched-link">Detayları Gör <i class="fas fa-arrow-right"></i></a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100 border-0 shadow-sm hover-card">
            <div class="card-body p-4">
                <div class="icon-circle mb-3 bg-success-light text-success">
                    <i class="fas fa-dumbbell fa-2x"></i>
                </div>
                <h5 class="card-title text-muted text-uppercase fs-6">Aktif Antrenman Programları</h5>
                <h2 class="display-4 fw-bold text-dark">@ViewBag.ProgramCount</h2>
                <a asp-controller="Programs" asp-action="Index" class="btn btn-sm btn-link text-decoration-none stretched-link">Detayları Gör <i class="fas fa-arrow-right"></i></a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100 border-0 shadow-sm hover-card">
            <div class="card-body p-4">
                <div class="icon-circle mb-3 bg-warning-light text-warning">
                    <i class="fas fa-utensils fa-2x"></i>
                </div>
                <h5 class="card-title text-muted text-uppercase fs-6">Aktif Diyet Listeleri</h5>
                <h2 class="display-4 fw-bold text-dark">@ViewBag.DietPlanCount</h2>
                <a asp-controller="DietPlans" asp-action="Index" class="btn btn-sm btn-link text-decoration-none stretched-link">Detayları Gör <i class="fas fa-arrow-right"></i></a>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
    .bg-primary-light { background-color: rgba(37, 99, 235, 0.1); padding: 15px; border-radius: 50%; display: inline-block; }
    .bg-success-light { background-color: rgba(16, 185, 129, 0.1); padding: 15px; border-radius: 50%; display: inline-block; }
    .bg-warning-light { background-color: rgba(245, 158, 11, 0.1); padding: 15px; border-radius: 50%; display: inline-block; }
    
    .text-gradient {
        background: var(--gradient-main);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>
}
