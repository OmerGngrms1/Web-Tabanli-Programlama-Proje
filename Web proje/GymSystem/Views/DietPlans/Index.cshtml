@model IEnumerable<GymSystem.Models.DietPlan>

@{
    ViewData["Title"] = "Diyet Listeleri";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6 fw-normal text-dark">Diyet Listeleri</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-1"></i> Yeni Plan Ekle</a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Plan Adı</th>
                        <th>Detay Özeti</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@item.Name</td>
                            <td>
                                @if(!string.IsNullOrEmpty(item.Details) && item.Details.Length > 50)
                                {
                                    @:@item.Details.Substring(0, 50)...
                                }
                                else
                                {
                                    @item.Details
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1"><i class="fas fa-info-circle"></i></a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-1"><i class="fas fa-edit"></i></a>

                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
