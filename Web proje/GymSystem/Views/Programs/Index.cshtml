@model IEnumerable<GymSystem.Models.WorkoutProgram>

@{
    ViewData["Title"] = "Programlar";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">Antrenman Programları</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Yeni Program Ekle</a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-dark text-white">
                     <h5 class="card-title mb-0">@item.Name</h5>
                </div>
                <div class="card-body">
                    <p class="card-text text-muted">@item.Description</p>
                    <p class="card-text"><i class="fas fa-clock"></i> Süre: @item.DurationInWeeks Hafta</p>
                </div>
                <div class="card-footer bg-transparent border-top-0 text-end">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm"><i class="fas fa-edit"></i> Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm"><i class="fas fa-trash"></i> Sil</a>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (!Model.Any())
    {
        <div class="col-12">
            <div class="alert alert-info">
                Henüz tanımlanmış bir antrenman programı bulunmuyor.
            </div>
        </div>
    }
</div>
