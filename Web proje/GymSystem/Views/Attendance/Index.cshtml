@model IEnumerable<GymSystem.Models.Attendance>

@{
    ViewData["Title"] = "Yoklama Geçmişi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">Yoklama Geçmişi (Son Kayıtlar)</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-calendar-check"></i> Yeni Yoklama Al</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Üye</th>
                    <th>@Html.DisplayNameFor(model => model.Date)</th>
                    <th>Durum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td>
                        <div class="d-flex flex-column">
                            <span class="fw-bold">@item.Member.Name @item.Member.Surname</span>
                            <small class="text-muted">@item.Member.Email</small>
                        </div>
                    </td>
                    <td>@item.Date.ToShortDateString() @item.Date.ToShortTimeString()</td>
                    <td>
                        @if (item.IsPresent)
                        {
                            <span class="badge bg-success"><i class="fas fa-check"></i> Katıldı</span>
                        }
                        else
                        {
                            <span class="badge bg-danger"><i class="fas fa-times"></i> Katılmadı</span>
                        }
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
